function gameOf3(n){
    while(n>1){
        if(n%3 == 1 ){
            console.log(n,-1)
            n=n-1;
            n=n/3;
        }
        else if(n%3==2){
            console.log(n, 1)
            n=n+1;
            n=n/3;
        }
        else{
            console.log(n,0)
            n=n/3;
        }
    }
    console.log(n)
}
const n = 100
console.log(gameOf3(n))
